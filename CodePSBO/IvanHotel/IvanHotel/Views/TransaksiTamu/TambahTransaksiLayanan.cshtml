@model IvanHotel.ViewModels.TamuVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Back/_Layout.cshtml";
}
<div class="box box-success">
    <div class="box-header"><h5>Tambah Transaksi Layanan</h5><hr /></div>
    <div class="box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <input type="text" hidden name="TransaksiID" value="@ViewBag.TransaksiID"/>
                <div class="input_fields_wrap">
                    <div class="col-md-2">&nbsp;</div><button class="add_field_button btn btn-primary btn-flat">Tambah Transaksi Layanan</button>
                    <br />
                    <br />
                    <div class="form-group">
                        <label class="control-label col-md-2"> Layanan</label>
                        <div class="col-md-8">
                            @Html.DropDownList("Layanan", null,String.Empty, new { @class="form-control"})
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index", "", new { @class="btn btn-default btn-flat"})
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {
            var max_fields = 10; //maximum input boxes allowed
            var wrapper = $(".input_fields_wrap"); //Fields wrapper
            var add_button = $(".add_field_button"); //Add button ID

            var x = 1; //initlal text box count
            $(add_button).click(function (e) { //on add input button click
                e.preventDefault();
                if (x < max_fields) { //max input box allowed
                    x++; //text box increment
                    $(wrapper).append('<div class="form-group">'+
                        '<label class="control-label col-md-2"> Layanan</label>'+
                        '<div class="col-md-8">'+
                            '<select class="form-control" name="layanan">'+
                                '<option value="2">Spa Total</option>'+
                                '<option value="3">Medical Spa</option>' +
                                '<option value="4">Mineral Spring</option>' +
                                '<option value="5">Super (Laudry)</option>' +
                            '</select>'+
                        '</div>' +
                        '<a href="#" class="remove_field">Remove</a>'+
                    '</div>'); //add input box
                }
            });

            $(wrapper).on("click", ".remove_field", function (e) { //user click on remove text
                e.preventDefault();
                $(this).parent('div').remove();
                x--;
            })
        });
    </script>
}
