@model IvanHotel.ViewModels.TamuVM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Back/_Layout.cshtml";
}
<div class="box box-success">
    <div class="box-header">
        <h5>Detials Tamu</h5>
        <div class="box-tools pull-right">
            <a href="@Url.Action("CetakPDF","TransaksiTamu")" class="btn btn-success btn-flat">Cetak PDF</a>
            <a href="@Url.Action("CetakWord","TransaksiTamu")" class="btn btn-success btn-flat">Cetak Word</a>
        </div>
        <hr />
    </div>
    <div class="box-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nama)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nama)
                </dd>

                <dt>
                    @Html.DisplayFor(model => model.NamaTipeIdentitas)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NomorIdentitas)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.JenisKelamin)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.JenisKelamin)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Alamat)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Alamat)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Kabupaten)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Kabupaten)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Kecamatan)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Kecamatan)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.NomorKontak)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NomorKontak)
                </dd>
            </dl>
        </div>
        <p>
            @Html.ActionLink("Back to List", "Index", "", new { @class="btn btn-default btn-flat"})
        </p>
    </div>
</div>
<div class="box box-success">
    <div class="box-header">
        <b>Transaksi Layanan Kamar</b>
        <div class="box-tools pull-right">
            <a href="@Url.Action("Tambah","Booking")" class="btn btn-info btn-flat">Tambah</a>
        </div>
        <hr />
    </div>
    <div class="box-body">
        <table class="table table-responsive table-striped" id="table">
            <thead>
                <tr>
                    <th>
                       Nomor Kamar
                    </th>
                    <th>
                        Tipe Kamar
                    </th>
                    <th>
                        CheckIn
                    </th>
                    <th>
                        CheckOut
                    </th>
                    <th>
                        Harga
                    </th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (IvanHotel.ViewModels.TransaksiVM item in ViewBag.ListTransaksiKamar)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomorKamar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipeKamar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckIn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CheckOut)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Harga)
                        </td>
                        @*<td width="200">
                            <div class="btn-group">
                                @Html.ActionLink("Verifikasi", "Verifikasi", new { id = item.ID }, new { @class = "btn btn-warning btn-sm btn-flat" })
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-sm btn-flat" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm btn-flat" })
                            </div>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="box box-success">
    <div class="box-header">
        <b>Transaksi Layanan Lain-lain</b>
        <div class="box-tools pull-right">
            @Html.ActionLink("TambahLayanan", "TambahTransaksiLayanan", new { id = Model.TransaksiID }, new { @class = "btn btn-warning btn-sm btn-flat" })
        </div>
        <hr />
    </div>
    <div class="box-body">
        <table class="table table-responsive table-striped" id="table1">
            <thead>
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        Nama
                    </th>
                    <th>
                        Tipe Layanan
                    </th>
                    <th>
                        Harga
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (IvanHotel.ViewModels.TransaksiVM item in ViewBag.ListTransaksiLayanan)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamaTipeLayanan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Harga)
                        </td>
                        <td width="200">
                                <div class="btn-group">
                                    @*Html.ActionLink("Verifikasi", "Verifikasi", new { id = item.ID }, new { @class = "btn btn-warning btn-sm btn-flat" })
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-sm btn-flat" })*@
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm btn-flat" })
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table').DataTable();
            $('#table1').DataTable();
        });
    </script>
}