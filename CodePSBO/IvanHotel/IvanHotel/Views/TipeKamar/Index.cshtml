@model IEnumerable<IvanHotel.Models.TipeKamar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Back/_Layout.cshtml";
}
<div class="box">
    <div class="box-header">
        <b>Editor Tipe Kamar</b>
        <div class="box-tools pull-right">
            <a href="@Url.Action("Create","TipeKamar")" class="btn btn-info btn-flat">Tambah</a>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-responsive table-striped" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nama)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nama)
                        </td>
                        <td width="200">
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm btn-flat" })
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary btn-sm btn-flat" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm btn-flat" })
                            </div>
                        </td>
                    </tr>
                }

        </table>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}