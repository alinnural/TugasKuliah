@model IvanHotel.Models.Kamar

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Back/_Layout.cshtml";
}
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Tambah Kamar</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.NomorKamar,"Nomor Kamar", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NomorKamar, new { @class="form-control"})
                        @Html.ValidationMessageFor(model => model.NomorKamar)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Kapasitas,"Kapasitas", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Kapasitas, new { @class="form-control"})
                        @Html.ValidationMessageFor(model => model.Kapasitas)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TipeKamarID, "Tipe Kamar", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("TipeKamarID", null,String.Empty, new { @class="form-control"})
                        @Html.ValidationMessageFor(model => model.TipeKamarID)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Lantai, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Lantai, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Lantai)
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <label class="control-label col-md-2">Fasilitas</label>
                    <div class="col-md-10">
                        @foreach (IvanHotel.Models.Fasilitas item in @ViewBag.Fasilitas)
                        {
                            <input type="checkbox" name="fasilitasid" value="@item.ID"/> @item.Nama<br />
                        }
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2"> Harga Weekday</label>
                    <div class="col-md-10">
                        <input type="text" name="hargaweekday" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2"> Harga Weekend</label>
                    <div class="col-md-10">
                        <input type="text" name="hargaweekend" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Lantai, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Lantai, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Lantai)
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>