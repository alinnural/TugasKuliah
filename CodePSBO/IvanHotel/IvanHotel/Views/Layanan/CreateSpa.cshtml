@model IvanHotel.ViewModels.LayananVM
@{
    ViewBag.Title = "Tambah Layanan Spa";
    Layout = "~/Views/Shared/Back/_Layout.cshtml";
}
<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Tambah Layanan Spa</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Layanan</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.Nama, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Nama, new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Nama)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Durasi, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Durasi, new { @class = "form-control timepicker" })
                        @Html.ValidationMessageFor(model => model.Durasi)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Peralatan, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Peralatan, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Peralatan)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Harga, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Harga, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Harga)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Deskripsi, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Deskripsi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Deskripsi)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/plugins/timepicker/bootstrap-timepicker.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $(".timepicker").timepicker({
                minuteStep: 10,
                template: false,
                showInputs: false,
                showMeridian: false
            });
        });
    </script>
}